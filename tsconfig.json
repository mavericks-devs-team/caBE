{
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "client", "dist", "build"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",

    "noEmit": false,
    "strict": true,
    "incremental": true,

    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["server/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
